#PROMPT=$'\e[0;34m\┌─[\e[1;33m● %M\e[0;34m]─[\e[1;36m%n\e[0;34m]─[\e[1;37m%~:'$(git_prompt)%$']\e[0;34m]─[\e[1;33m%T\e[0;34m\]\e[0m: $\n\e[0;34m└─╼ \e[1;35m>> \e[00;00m'

autoload -U colors && colors
